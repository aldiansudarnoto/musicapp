<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="aldian.com.soundbox.MainActivity">

    <ImageView
        android:id="@+id/artistImage"
        android:background="@drawable/miasebastianstheme"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="86dp"/>

    <TextView
        android:id="@+id/artistName"
        android:text="Robby Williams - Candy"
        android:layout_below="@+id/artistImage"
        android:layout_marginTop="15dp"
        android:textColor="#000000"
        android:textStyle="italic"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed" />

    <LinearLayout
        android:id="@+id/linearLayoutId"
        android:orientation="horizontal"
        android:background="@drawable/button_bg"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/artistName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/prevButtonId"
            android:background="@android:drawable/ic_media_previous"
            android:layout_width="40dp"
            android:layout_height="40dp"
            />
        <Button
            android:id="@+id/playButtonId"
            android:background="@android:drawable/ic_media_play"
            android:layout_width="40dp"
            android:layout_height="40dp"
            />
        <Button
            android:id="@+id/nextButtonId"
            android:background="@android:drawable/ic_media_next"
            android:layout_width="40dp"
            android:layout_height="40dp"
            />
    </LinearLayout>

    <Button
        android:id="@+id/goToLibraryButtonId"
        android:layout_below="@+id/linearLayoutId"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/go_to_library"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
